{
  "name": "diary-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && xcopy .\\build\\* ..\\..\\csharp-diary-rewrite\\diary\\wwwroot /s /y",
    "buld-linux": "vite build && mkdir -p ../../csharp-diary-rewrite/diary/wwwroot/ && cp -r \"./build\"/* ../../csharp-diary-rewrite/diary/wwwroot/",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "generateApiClient": "npm run generateOpenapiJson && npm run createClientFromOpenapiSpec",
    "generateOpenapiJson": "mkdir todoDelete && cd ..\\..\\csharp-diary-rewrite && dotnet swagger tofile --output ..\\sveltekit-frontend\\diary-frontend\\todoDelete\\spec.json diary\\bin\\Debug\\net7.0\\csharp-diary-rewrite.dll v1",
    "createClientFromOpenapiSpec": "cd todoDelete && npm install openapi-typescript-codegen --save-dev && npx openapi --input .\\spec.json --output ..\\src\\lib\\generated && cd .. && rmdir todoDelete /s /q"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-static": "^2.0.3",
    "@sveltejs/kit": "^1.20.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.5.1",
    "eslint": "^8.28.0",
    "eslint-plugin-svelte": "^2.30.0",
    "openapi-typescript-codegen": "^0.25.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2"
  },
  "type": "module"
}
